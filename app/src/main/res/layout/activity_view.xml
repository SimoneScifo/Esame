<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simone.it.esame.Activities.MainActivity">

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CERCA"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/searchET"
        android:id="@+id/noteRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_below="@+id/noteRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="ASCENDENTE" />

        <Button
            android:id="@+id/btnGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="GRIGLIA"
            android:layout_weight="5"/>
    </LinearLayout>
</RelativeLayout>
